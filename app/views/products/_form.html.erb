<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :manufacturer_id %><br>
    <%= f.number_field :manufacturer_id %>
    
    <% Manufacturer.all.each_with_index do |m, index| %>
    <p>
      <strong><%= index + 1 %>: </strong> <%= m.name %>
    </p>
    <% end %>
    
  </div>
  
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.number_field :category_id %>
    
        <% Category.all.each_with_index do |c, index| %>
      <p>
        <strong><%= index + 1 %>: </strong> <%= c.name %>
      </p>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  
  <div class="field">
    <%= f.label :stock_quantity %><br>
    <%= f.number_field :stock_quantity %>
  </div>
  
  <div class="field">
    Image Filename <br>
    <%= f.text_field :image_filname %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
